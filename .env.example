# Required: Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Required: BoardGameGeek API Key
BGG_API_KEY=your_bgg_api_key_here

# Webhook Configuration (for Cloud Run deployment)
# Leave empty to use polling mode (for local development)
WEBHOOK_URL=https://your-service-name-xxx-uc.a.run.app

# Webhook Secret Token for request verification (recommended for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=your_webhook_secret_here

# Port for the webhook server (Cloud Run sets this automatically)
PORT=8080
